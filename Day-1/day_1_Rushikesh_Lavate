class cude_root:
    def __init__(self,num):
        self.num = num
        
    def find_c_root(self):
        if self.num > 0:
            result = self.num**(1/3)
        elif self.num < 0:
            result = (-(-self.num)**(1/3))
        else:
            result = (self.num)

        print('Cude root of number {} is {}'.format(self.num, result))

num = int(input("Enter the cude: "))
obj = cude_root(num=0)
obj.find_c_root()
